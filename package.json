{
  "name": "ritians-transport",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "node server.js",
    "dev:all": "concurrently \"node server.js\" \"vite\"",
    "serve": "npm run build && node server.js",
    "build": "vite build",
    "postinstall": "npm run build",
    "preview": "vite preview",
    "deploy-all": "npm run build && firebase deploy --only \"hosting,functions,firestore,database\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "firebase": "^10.7.1",
    "firebase-admin": "^13.6.1",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite": "^7.3.1"
  }
}