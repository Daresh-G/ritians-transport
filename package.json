{
  "name": "ritians-transport",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:vite\"",
    "dev:vite": "vite --port 3000 --strictPort",
    "dev:server": "node server.js",
    "start": "node server.js",
    "serve": "npm run build && node server.js",
    "build": "vite build",
    "postinstall": "npm run build",
    "preview": "vite preview",
    "deploy-all": "npm run build && firebase deploy --only \"hosting,firestore,database\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dataconnect/admin-generated": "file:src/dataconnect-admin-generated",
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "firebase": "^10.7.1",
    "firebase-admin": "^13.6.1",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite": "^7.3.1"
  }
}
